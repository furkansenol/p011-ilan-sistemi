@model IlanSistemi.Entities.Concrete.Category
@{
    ViewData["Title"] = "AddKategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yeni Sayfa Ekleme Paneli</h4>
			<form class="forms-sample" asp-action="AddKategori" method="post">
				<input type="hidden" asp-for="Id" />
				<div class="form-group row">
					<label for="exampleInputUsername2" class="col-sm-3 col-form-label">Kategori Adı</label>
					<div class="col-sm-9">
						<input type="text" asp-for="Name" class="form-control" placeholder="Kategori Adı">
					</div>
				</div>
				<div class="form-group row">
					<label for="exampleInputEmail2" class="col-sm-3 col-form-label">Açıklama</label>
					<div class="col-sm-9">
						<input type="text" asp-for="Description" class="form-control" placeholder="Açıklama">
					</div>
				</div>
				<button type="submit" class="btn btn-primary mr-2">Kaydet</button>
			</form>
		</div>
	</div>
</div>