@using IlanSistemi.Entities.Concrete
@model List<Category>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title"> Kategori Kontrol Sayfası </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th> <b>Sil</b></th>
							<th> <b> Düzenle </b> </th>
							<th> <b> Kategori Adı </b> </th>
							<th> <b> Açıklama </b></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td> <a asp-controller="Kategori" asp-action="DeleteKategori" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a> </td>
								<td> <a asp-controller="Kategori" asp-action="EditKategori" asp-route-id="@item.Id" class="btn btn-outline-success">Düzenle</a> </td>
								<td>
									@item.Name
								</td>
								<td>
									@item.Description
								</td>
							</tr>
						}
					</tbody>
				</table>
				<a asp-controller="Kategori" asp-action="AddKategori" class="btn btn-outline-info"> Yeni Kategori Ekle </a>
			</div>
		</div>
	</div>
</div>

