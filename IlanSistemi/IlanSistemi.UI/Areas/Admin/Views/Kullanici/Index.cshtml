@using IlanSistemi.Entities.Concrete
@model List<Users>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title"> Kullanıcı Kontrol Sayfası </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th> <b>İşlemler</b></th>
							<th> <b> Adı </b> </th>
							<th> <b> Soyadı </b> </th>
							<th> <b> Oluşturma Tarihi </b></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<a asp-controller="Kullanici" asp-action="DeleteKullanici" asp-route-id="@item.Id" class="btn btn-inverse-danger">Sil</a>
									<a asp-controller="Kullanici" asp-action="DetailKullanici" asp-route-id="@item.Id" class="btn btn-inverse-primary">Detaylar</a>
									<a asp-controller="Kullanici" asp-action="BanUser" asp-route-id="@item.Id" class="btn btn-inverse-dark">Kullanıcıyı Banla</a>
									<a asp-controller="Kullanici" asp-action="UnbanUser" asp-route-id="@item.Id" class="btn btn-inverse-success">Kullanıcı Banı Kaldır</a>

								</td>
								<td>
									<img class="img-sm rounded-circle" src="~/Stellar-master/images/faces/face3.jpg" alt="profile image"> @item.Name
								</td>
								<td>
									@item.Surname
								</td>
								<td>
									@item.CreatedAt.Year
								</td>

							</tr>
						}
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>
