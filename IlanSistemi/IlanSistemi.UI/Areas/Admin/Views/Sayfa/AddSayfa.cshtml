@model IlanSistemi.Entities.Concrete.Page
@{
	ViewData["Title"] = "AddSayfa";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yeni Sayfa Ekleme Paneli</h4>
			<form class="forms-sample" asp-action="AddSayfa" method="post">
				<div class="form-group row">
					<label for="exampleInputUsername2" class="col-sm-3 col-form-label">Başlık</label>
					<div class="col-sm-9">
						<input type="text" asp-for="Title" class="form-control"  placeholder="Başlık">
					</div>
				</div>
				<div class="form-group row">
					<label for="exampleInputEmail2" class="col-sm-3 col-form-label">Açıklama</label>
					<div class="col-sm-9">
						<input type="text" asp-for="Content" class="form-control"  placeholder="Açıklama">
					</div>
				</div>
				<div class="form-check form-check-flat form-check-primary">
					<label class="form-check-label">
						<input type="checkbox" class="form-check-input" asp-for="IsActive"> Yayım Durumu
					</label>
				</div>
				<button type="submit" class="btn btn-primary mr-2">Kaydet</button>
			</form>
		</div>
	</div>
</div>