@model IlanSistemi.UI.Areas.Admin.Models.ReportListViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row quick-action-toolbar">
	<div class="col-md-12 grid-margin">
		<div class="card">
			<div class="card-header d-block d-md-flex">
				<h5 class="mb-0">Kolay Erişim</h5>
			</div>
			<div class="d-md-flex row m-0 quick-action-btns" role="group" aria-label="Quick action buttons">
				<div class="col-sm-6 col-md-4 p-3 text-center btn-wrapper">
					<a href="/Admin/Kullanici/Index/" type="button" class="btn px-0"> <i class="icon-user mr-2"></i>Kullanıcı İşlemleri</a>
				</div>
				<div class="col-sm-6 col-md-4 p-3 text-center btn-wrapper">
					<a href="/Admin/Kategori/Index/" type="button" class="btn px-0"><i class="icon-docs mr-2"></i> Kategori İşlemleri</a>
				</div>
				<div class="col-sm-6 col-md-3 p-3 text-center btn-wrapper">
					<a href="/Admin/Urun/Index/" type="button" class="btn px-0"><i class="icon-folder mr-2"></i> Ürün İşlemleri</a>
				</div>

			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-4 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title"><b>Kullanıcılar</b></h4>
				<div class="aligner-wrapper">
					<canvas id="sessionsDoughnutChart" height="210"></canvas>
					<div class="wrapper d-flex flex-column justify-content-center absolute absolute-center">
						<h2 class="text-center mb-0 font-weight-bold">@Model.Users.Count</h2>
						<small class="d-block text-center text-muted font-weight-semibold mb-0">Toplam Kullanıcı</small>
					</div>
				</div>
				<div class="wrapper mt-4 d-flex flex-wrap align-items-center">
					<div class="d-flex">
						<span class="square-indicator @(Model.Users.Count > 0 ? "bg-danger" : "bg-secondary") ml-2"></span>
						<p class="mb-0 ml-2">Aktif Olmayan</p>
					</div>
					<div class="d-flex">
						<span class="square-indicator @(Model.Users.Count > 0 ? "bg-success" : "bg-secondary") ml-2"></span>
						<p class="mb-0 ml-2">Aktif Olan</p>
					</div>
					<div class="d-flex">
						<span class="square-indicator @(Model.Adverts.Count > 0 ? "bg-info" : "bg-secondary") ml-2"></span>
						<p class="mb-0 ml-2">Yayınladığı Ürünler</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	@await Component.InvokeAsync("CatagoryList")

	<!-- plugins:js -->
	<script src="/Stellar-master/vendors/js/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page -->
	<script src="/Stellar-master/vendors/chart.js/Chart.min.js"></script>
	<script src="/Stellar-master//vendors/moment/moment.min.js"></script>
	<script src="/Stellar-master//vendors/daterangepicker/daterangepicker.js"></script>
	<script src="/Stellar-master//vendors/chartist/chartist.min.js"></script>
	<!-- End plugin js for this page -->
	<!-- inject:js -->
	<script src="/Stellar-master/js/off-canvas.js"></script>
	<script src="/Stellar-master/js/misc.js"></script>
	<!-- endinject -->
	<!-- Custom js for this page -->
	<script src="/Stellar-master//js/dashboard.js"></script>
	<!-- End custom js for this page -->
</div>

<div class="row">
	@await Component.InvokeAsync("ReportList")
</div>
<div class="row">
	@await Component.InvokeAsync("UserList")
	@await Component.InvokeAsync("ProdoctList")

</div>

