
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="page-title">
	<!-- Container Start -->
	<div class="container">
		<div class="row">
			<div class="col-md-8 offset-md-2 text-center">
				<!-- Title text -->
				<h3>Bize Ulaşın</h3>
			</div>
		</div>
	</div>
	<!-- Container End -->
</section>
<!-- page title -->

<!-- contact us start-->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="contact-us-content p-4">                    
                    <h1 class="pt-3">Merhaba, bi sorun mu var?</h1>
                    <p class="pt-3 pb-2">Destek merkezinden yardım almak istediğiniz konu başlığını bulamazsanız yaziliiletisim@silikonmarket.com adresi üzerinden de destek alabilirsiniz.</p>                        
                        <p class="pt-0 pb-2">Üyesi olduğumuz İstanbul Ticaret Odası’nın üyeleri için geçerli davranış kurallarına www.ito.org.tr adresinden ulaşılabilir.</p>
                </div>
            </div>
            <div class="col-md-6">
                    <form action="#">
                        <fieldset class="p-4">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-6 py-2">
                                        <input type="text" placeholder="İsim *" class="form-control" required>
                                    </div>
                                    <div class="col-lg-6 pt-2">
                                        <input type="email" placeholder="E-Mail *" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <select name="" id="" class="form-control w-100">
                                <option value="1">Kategori Seçin</option>
                                <option value="1">Moda</option>
                                <option value="1">Ev, Yaşam</option>
                                <option value="1">Spor, Outdoor</option>
                                <option value="1">Kozmetik</option>
                            </select>
                            <textarea name="message" id=""  placeholder="Mesaj*" class="border w-100 p-3 mt-3 mt-lg-4"></textarea>
                            <div class="btn-grounp">
                                <button type="submit" class="btn btn-primary mt-2 float-right">GÖNDER</button>
                            </div>
                        </fieldset>
                    </form>
            </div>
        </div>
    </div>
</section>
<!-- contact us end -->
