@using IlanSistemi.Entities.ViewModels;
@model List<AdvertVM>
<section class="popular-deals section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Popüler İlanlar</h2>
                    <p>En çok ilgi çeken ilanlar</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- offer 01 -->
            <div class="col-lg-12">
                <div class="trending-ads-slide">
                    @foreach (var item in Model)
                    {
                        var title = item.Advert.Title.Length > 18 ? item.Advert.Title.Substring(0, 18) + "..." : item.Advert.Title;
                        <div class="col-sm-12 col-lg-4">
                            <!-- product card -->
                            <div class="product-item bg-light">
                                <div class="card">
                                    <div class="thumb-content">
                                        <!-- <div class="price">$200</div> -->
                                        <a asp-controller="Advert" asp-action="Index" asp-route-advertId="@item.Advert.Id">
                                            <img class="card-img-top img-fluid" style="object-fit: cover; height: 200px;" src="/UrunResimleri/@item.AdvertImages?.FirstOrDefault()?.ImagePath" alt="Card image cap">
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <h4 class="card-title"><a asp-controller="Advert" asp-action="Index" asp-route-advertId="@item.Advert.Id">@title</a></h4>
                                        <ul class="list-inline product-meta">
                                            <li class="list-inline-item">
                                                <a asp-controller="Advert" asp-action="Index" asp-route-advertId="@item.Advert.Id"><i class="fa fa-folder-open-o"></i>@item.Advert.Description</a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a asp-controller="Advert" asp-action="Index" asp-route-advertId="@item.Advert.Id"><i class="fa fa-calendar"></i>@DateTime.Now.Year</a>
                                            </li>
                                        </ul>
                                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Explicabo, aliquam!</p>
                                        <div class="product-ratings">
                                            <ul class="list-inline">
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>



                        </div>
                    }


                </div>
            </div>


        </div>
    </div>
</section>
